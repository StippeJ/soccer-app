<?xml version="1.0" encoding="utf-8"?>
<!-- author: Jan Stippe -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".EventActivity">

        <ProgressBar
            android:id="@+id/betProgressSpinner"
            style="@style/ProgressBarStyle"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/eventGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="eventHeadline,imageHomeTeam,eventScoreHome,eventScoreSpacer,eventScoreAway,imageAwayTeam,spacer,eventDateTitle,eventLocationTitle,eventLeagueTitle,eventRoundTitle,eventDate,eventLocation,eventLeague,eventRound,saveBetButton"/>

        <TextView
            android:id="@+id/eventHeadline"
            style="@style/Headline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/imageHomeTeam"
            tools:text="Team A vs Team B"/>

        <ImageView
            android:id="@+id/imageHomeTeam"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:maxHeight="60dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintWidth_percent="0.15"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toBottomOf="@+id/eventHeadline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/eventScoreHome"
            app:layout_constraintBottom_toTopOf="@+id/spacer"
            android:contentDescription="@string/clubImageDescription"/>

        <EditText
            android:id="@+id/eventScoreHome"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            app:layout_constraintTop_toTopOf="@+id/imageHomeTeam"
            app:layout_constraintStart_toEndOf="@+id/imageHomeTeam"
            app:layout_constraintEnd_toStartOf="@+id/eventScoreSpacer"
            app:layout_constraintBottom_toBottomOf="@+id/imageHomeTeam"
            tools:text="1"/>

        <TextView
            android:id="@+id/eventScoreSpacer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/eventScoreHome"
            app:layout_constraintStart_toEndOf="@+id/eventScoreHome"
            app:layout_constraintEnd_toStartOf="@+id/eventScoreAway"
            app:layout_constraintBottom_toBottomOf="@+id/eventScoreHome"
            android:text=":"/>

        <EditText
            android:id="@+id/eventScoreAway"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            app:layout_constraintTop_toTopOf="@+id/eventScoreHome"
            app:layout_constraintStart_toEndOf="@+id/eventScoreSpacer"
            app:layout_constraintEnd_toStartOf="@+id/imageAwayTeam"
            app:layout_constraintBottom_toBottomOf="@+id/eventScoreHome"
            tools:text="2"/>

        <ImageView
            android:id="@+id/imageAwayTeam"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:maxHeight="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintWidth_percent="0.15"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="@+id/imageHomeTeam"
            app:layout_constraintStart_toEndOf="@+id/eventScoreAway"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/imageHomeTeam"
            android:contentDescription="@string/clubImageDescription"/>

        <View
            android:id="@+id/spacer"
            style="@style/Spacer"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            app:layout_constraintTop_toBottomOf="@id/imageHomeTeam"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/eventDateTitle"/>

        <TextView
            android:id="@+id/eventDateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            style="@style/Subheading"
            app:layout_constraintTop_toBottomOf="@+id/spacer"
            app:layout_constraintStart_toStartOf="@id/imageHomeTeam"
            android:text="@string/eventDate"/>

        <TextView
            android:id="@+id/eventLocationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            style="@style/Subheading"
            app:layout_constraintTop_toBottomOf="@+id/eventDateTitle"
            app:layout_constraintStart_toStartOf="@+id/imageHomeTeam"
            android:text="@string/eventLocation"/>

        <TextView
            android:id="@+id/eventLeagueTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            style="@style/Subheading"
            app:layout_constraintTop_toBottomOf="@+id/eventLocationTitle"
            app:layout_constraintStart_toStartOf="@id/imageHomeTeam"
            android:text="@string/eventLeague"/>

        <TextView
            android:id="@+id/eventRoundTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            style="@style/Subheading"
            app:layout_constraintTop_toBottomOf="@+id/eventLeagueTitle"
            app:layout_constraintStart_toStartOf="@id/imageHomeTeam"
            app:layout_constraintBottom_toTopOf="@+id/saveBetButton"
            android:text="@string/eventRound"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_40_percent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4"/>

        <TextView
            android:id="@+id/eventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/eventDateTitle"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical_40_percent"
            app:layout_constraintBottom_toBottomOf="@+id/eventDateTitle"/>

        <TextView
            android:id="@+id/eventLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/eventLocationTitle"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical_40_percent"
            app:layout_constraintBottom_toBottomOf="@+id/eventLocationTitle"/>

        <TextView
            android:id="@+id/eventLeague"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/eventLeagueTitle"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical_40_percent"
            app:layout_constraintBottom_toBottomOf="@+id/eventLeagueTitle"/>

        <TextView
            android:id="@+id/eventRound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/eventRoundTitle"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical_40_percent"
            app:layout_constraintBottom_toBottomOf="@+id/eventRoundTitle"/>

        <TextView
            android:id="@+id/errorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Error"
            android:visibility="invisible"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/saveBetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/saveBet"
            app:layout_constraintTop_toBottomOf="@+id/eventRoundTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>